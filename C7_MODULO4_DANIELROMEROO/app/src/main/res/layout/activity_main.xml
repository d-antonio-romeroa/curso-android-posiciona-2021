<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/p1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@id/i1"
        app:layout_constraintBottom_toBottomOf="@id/i1"
        app:layout_constraintStart_toStartOf="@id/i1"
        app:layout_constraintEnd_toEndOf="@id/i1"/>

    <ProgressBar
        android:id="@+id/p2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="@id/i2"
        app:layout_constraintBottom_toBottomOf="@id/i2"
        app:layout_constraintStart_toStartOf="@id/i2"
        app:layout_constraintEnd_toEndOf="@id/i2"/>

    <ProgressBar
        android:id="@+id/p3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="@id/i3"
        app:layout_constraintBottom_toBottomOf="@id/i3"
        app:layout_constraintStart_toStartOf="@id/i3"
        app:layout_constraintEnd_toEndOf="@id/i3"/>

    <ProgressBar
        android:id="@+id/p4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="@id/i4"
        app:layout_constraintBottom_toBottomOf="@id/i4"
        app:layout_constraintStart_toStartOf="@id/i4"
        app:layout_constraintEnd_toEndOf="@id/i4"/>

    <ImageView
        android:id="@+id/i1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/i3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/i2"/>

    <ImageView
        android:id="@+id/i2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/i4"
        app:layout_constraintStart_toEndOf="@id/i1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/i3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toBottomOf="@id/i1"
        app:layout_constraintBottom_toTopOf="@id/btnMSG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/i4" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toBottomOf="@id/i2"
        app:layout_constraintBottom_toTopOf="@id/btnMSG"
        app:layout_constraintStart_toEndOf="@id/i3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnMSG"
        android:text="@string/aviso"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="75dp"
        app:layout_constraintTop_toBottomOf="@id/i3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>